<%= render PageComponent.new do |page| %>
  <% page.header(title: "My Countdowns") do |header| %>
    <% header.actions([
      { name: "+ New", href: new_countdown_path }
    ])%>
  <% end %>
  <%= page.section(id: "incomplete-countdowns", classes: ["page__section"]) do %>
    <% @countdowns.incomplete.each do |incomplete| %>
      <%= render CountdownComponent.new(countdown: incomplete) %>
    <% end %>
  <% end %>
  <%= page.section(id: "complete_countdowns", classes: ["page_section"]) do %>
    <% @countdowns.complete.each do |complete| %>
      <%= render CountdownComponent.new(countdown: complete) %>
    <% end %>
  <% end %>
<% end %>